<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_minecraft"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/minecraft"
        app:layout_constraintEnd_toStartOf="@+id/btn_cookie_clicker"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_cookie_clicker"
        android:layout_width="122dp"
        android:layout_height="125dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/cookieclicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_minecraft"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minecraft"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_minecraft"
        app:layout_constraintStart_toStartOf="@+id/btn_minecraft"
        tools:layout_editor_absoluteY="366dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cookie Clicker"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_cookie_clicker"
        app:layout_constraintStart_toStartOf="@+id/btn_cookie_clicker"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Select A Game"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>